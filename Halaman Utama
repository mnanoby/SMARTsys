    private void jButton7ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        try {

            Statement stm = (Statement) cn.createStatement();
            int reply = JOptionPane.showConfirmDialog(null, "Apakah Anda Yakin Ingin Menghapus Data ini ?", "Hapus Data", JOptionPane.YES_NO_OPTION);
            if (reply == JOptionPane.YES_OPTION) {
                stm.executeUpdate("DELETE FROM login WHERE KodeDivisi=" + tabModel.getValueAt(jTable4.getSelectedRow(), 0));
                JOptionPane.showMessageDialog(this, "Data Berhasil Dihapus!");
                tampilAdmin();
            }

        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "error");
        }
    }                                        

