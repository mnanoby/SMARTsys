    private void tampilDataSiswa() {
        try {
            Statement stm;
            stm = (Statement) cn.createStatement();
            tabModel.getDataVector().removeAllElements();
            rs = stm.executeQuery("select * from datasiswa ORDER by NomorInduk ASC");
            while (rs.next()) {
                Object[] data = {
                    Nomor,
                    rs.getString("NomorInduk"),
                    rs.getString("Nama"),
                    rs.getString("JenisKelamin"),
                    rs.getString("Alamat"),
                    rs.getString("SekolahAsal"),
                    rs.getString("CPSiswa"),
                    rs.getString("CPOrangTua"),
                    rs.getString("Kelas"),
                    rs.getString("Jurusan"),
                    rs.getString("PaketBimbel"),};
                tabModel.addRow(data);

            }
        } catch (SQLException e) {
        }
    }

    private void tampilAdmin() {
        try {
            Statement stm;
            stm = (Statement) cn.createStatement();
            tabModel.getDataVector().removeAllElements();
            rs = stm.executeQuery("select * from login ORDER BY KodeDivisi");
            while (rs.next()) {
                Object[] data = {rs.getString("KodeDivisi"),
                    rs.getString("NamaAdmin"),
                    rs.getString("NamaDivisi")
                };
                tabModel.addRow(data);
            }
        } catch (SQLException e) {
        }
    }
