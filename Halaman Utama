    private void button1ActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        konekLogIn();
        try {
            Statement stm = (Statement) cn.createStatement();
            stm.executeUpdate("insert into login(KodeDivisi,NamaDivisi,NamaAdmin,password) "
                    + "values ("
                    + "'" + jTextField3.getText() + "',"
                    + "'" + jTextField4.getText() + "',"
                    + "'" + jTextField1.getText() + "',"
                    + "'" + jPasswordField1.getText() + "')");
            JOptionPane.showMessageDialog(rootPane, "Data berhasil ditambahkan ");
            kosongAdmin();
            tampilAdmin();
        } catch (SQLException ex) {
            JOptionPane.showMessageDialog(rootPane, "Error");
            Logger.getLogger(HalamanUtama.class.getName()).log(Level.SEVERE, null, ex);
        }
    }                                       

    private void jTable4MouseClicked(java.awt.event.MouseEvent evt) {                                     
        // TODO add your handling code here:
        jTextField3.setText("" + tabModel.getValueAt(jTable4.getSelectedRow(), 0));
        jTextField1.setText("" + tabModel.getValueAt(jTable4.getSelectedRow(), 1));
        jTextField4.setText("" + tabModel.getValueAt(jTable4.getSelectedRow(), 2));
    }                                    

