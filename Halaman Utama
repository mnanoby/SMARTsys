    private void CariActionPerformed(java.awt.event.ActionEvent evt) {                                     
        tabModel.getDataVector().removeAllElements();
        cari(jTextField2.getText());
    }                                    

    private void hapusActionPerformed(java.awt.event.ActionEvent evt) {                                      

        try {
            Statement stm;
            stm = (Statement) cn.createStatement();
            int reply = JOptionPane.showConfirmDialog(null, "Apakah Anda Yakin Ingin Menghapus Data ini ?", "Hapus Data", JOptionPane.YES_NO_OPTION);
            if (reply == JOptionPane.YES_OPTION) {
                stm.executeUpdate("DELETE FROM datasiswa WHERE NomorInduk='" + tabModel.getValueAt(jTable1.getSelectedRow(), 1) + "'");
                JOptionPane.showMessageDialog(this, "Data Berhasil Dihapus!");
                tampilDataSiswa();
            }
        } catch (SQLException ex) {
            JOptionPane.showMessageDialog(rootPane, "Error");
            Logger.getLogger(HalamanUtama.class.getName()).log(Level.SEVERE, null, ex);
        }
    }                                     

    private void jTextField2KeyReleased(java.awt.event.KeyEvent evt) {                                        
        // TODO add your handling code here:
        if (jTextField2.getText().equals("")) {
            tampilDataSiswa();
        }
    }                                       

    private void jTextField2KeyPressed(java.awt.event.KeyEvent evt) {                                       
        // TODO add your handling code here:
        if (evt.getKeyCode() == KeyEvent.VK_ENTER) {
            Cari.doClick();
        }
    }                                      

