    private void jButton11ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        CRUD fCRUD = new CRUD();
        fCRUD.fHU = this;
        Statement stm;
        try {
            stm = (Statement) cn.createStatement();
            rs = stm.executeQuery("SELECT Tagihan from datasiswa WHERE NomorInduk = '" + tabModel.getValueAt(jTable1.getSelectedRow(), 1) + "'");
            rs.next();
            fCRUD.Tagihan = rs.getString("Tagihan");


            int tabelDs = jTable1.getSelectedRow();
            fCRUD.kode();
            fCRUD.Nama = tabModel.getValueAt(tabelDs, 2).toString();
            fCRUD.ButtonGroup1();
            fCRUD.ButtonGroup2();
            fCRUD.Alamat = tabModel.getValueAt(tabelDs, 4).toString();
            fCRUD.SekolahAsal = tabModel.getValueAt(tabelDs, 5).toString();
            fCRUD.CPSiswa = tabModel.getValueAt(tabelDs, 6).toString();
            fCRUD.CPOrtu = tabModel.getValueAt(tabelDs, 7).toString();
            fCRUD.Kelas = tabModel.getValueAt(tabelDs, 8).toString();
            fCRUD.Jurusan = tabModel.getValueAt(tabelDs, 9).toString();
            fCRUD.ambilData();
            fCRUD.konekDataSiswa();
            fCRUD.setVisible(true);
            fCRUD.jTabbedPane1.removeTabAt(1);
            fCRUD.jTabbedPane1.removeTabAt(2);
            fCRUD.jTabbedPane1.removeTabAt(1);
        } catch (SQLException ex) {
            Logger.getLogger(HalamanUtama.class.getName()).log(Level.SEVERE, null, ex);
        }
    }                                         

    private void jButton10ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        PopUp fPU = new PopUp();
        fPU.fHU = this;
        int tabelds = jTable1.getSelectedRow();
        fPU.NomorInduk = tabModel.getValueAt(tabelds, 1).toString();
        fPU.Nama = tabModel.getValueAt(tabelds, 2).toString();
        fPU.isiData();
        fPU.tampilKetPresensi();
        fPU.tampilKetNilai();
        //fPU.tampilTghKet();
        fPU.tampilKetPembayaran();
        fPU.setVisible(true);
    }                                         
