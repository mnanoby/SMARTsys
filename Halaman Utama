    void koneksi() {
        try {
            Class.forName("com.mysql.jdbc.Driver");
            cn = (Connection) DriverManager.getConnection("jdbc:mysql://localhost:3306/kp?zeroDateTimeBehavior=convertToNull", "root", "");
        } catch (ClassNotFoundException e) {
            e.printStackTrace();
        } catch (SQLException e) {
            e.printStackTrace();
        }

    }

    void placeHolder() {

        //placeholder datasiswa
        PromptSupport.setPrompt("Cari nama", jTextField2);
        PromptSupport.setFocusBehavior(PromptSupport.FocusBehavior.HIDE_PROMPT, jTextField2);
        PromptSupport.setFontStyle(Font.ITALIC | Font.BOLD, jTextField2);
        jTextField2.getText();
        PromptSupport.setFocusBehavior(PromptSupport.FocusBehavior.SHOW_PROMPT, jTextField2);
        jTextField2.setOpaque(true);

        //placeholder kode divisi
        PromptSupport.setPrompt("Masukkan Kode Divisi", jTextField3);
        PromptSupport.setFocusBehavior(PromptSupport.FocusBehavior.HIDE_PROMPT, jTextField3);
        PromptSupport.setFontStyle(Font.ITALIC | Font.BOLD, jTextField3);
        jTextField3.getText();
        PromptSupport.setFocusBehavior(PromptSupport.FocusBehavior.SHOW_PROMPT, jTextField3);
        jTextField3.setOpaque(true);

        //placeholder username
        PromptSupport.setPrompt("Masukkan Nama Admin", jTextField1);
        PromptSupport.setFocusBehavior(PromptSupport.FocusBehavior.HIDE_PROMPT, jTextField1);
        PromptSupport.setFontStyle(Font.ITALIC | Font.BOLD, jTextField1);
        jTextField1.getText();
        PromptSupport.setFocusBehavior(PromptSupport.FocusBehavior.SHOW_PROMPT, jTextField1);
        jTextField1.setOpaque(true);


        //placeholder Nama divisi
        PromptSupport.setPrompt("Masukkan Nama Divisi", jTextField4);
