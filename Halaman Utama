        jTextField4.setOpaque(true);
    }

    void loginas() {
        try {
            Statement st;
            st = (Statement) cn.createStatement();
            rs = st.executeQuery("SELECT * FROM login");
            rs.next();
            String username = rs.getString("KodeDivisi");
            String password = rs.getString("password");
            jLabel2.setText(username);

        } catch (SQLException ex) {
            Logger.getLogger(HalamanUtama.class.getName()).log(Level.SEVERE, null, ex);
        }
    }

    void Tanggal() {
        SimpleDateFormat ft = new SimpleDateFormat("dd-MM-yyyy");
        Date dNow = new Date();
        jLabel26.setText(ft.format(dNow));
    }

    void noUrut() {
        //hitung baris
        int baris = tabModel.getRowCount();
        for (int a = 0; a < baris; a++) {
            String nomor = String.valueOf(a + 1);
            tabModel.setValueAt(nomor, a, 0);
        }
    }

    void konekDataSiswa() {
        try {

            Object[] judul = {"No.", "Nomor Induk", "Nama", "Jenis Kelamin", "Alamat", "Sekolah Asal", "CP Siswa", "CP Orang Tua", "Kelas", "Jurusan", "Paket Bimbel"};
            tabModel = new DefaultTableModel(null, judul) {
                //membuat tabel tidak bisa diedit saat diklik
                @Override
                public boolean isCellEditable(int rowIndex, int colIndex) {
                    return false;
                }
            };
            jTable1.setModel(tabModel);
            tampilDataSiswa();
            noUrut();
        } catch (Exception e) {
            e.printStackTrace();
        }
    }

    void konekLogIn() {
        try {
            Object[] judul = {"Kode Divisi", "Nama Admin", "Nama Divisi"};
            tabModel = new DefaultTableModel(null, judul) {
                //membuat tabel tidak bisa diedit saat diklik
                @Override
                public boolean isCellEditable(int rowIndex, int colIndex) {
                    return false;
                }
            };
            jTable4.setModel(tabModel);
            tampilAdmin();
        } catch (Exception e) {
            e.printStackTrace();
        }
    }

    public void cari(String nama) {
        try {
            if (nama.equals("")) {
                JOptionPane.showMessageDialog(this, "Mohon masukkan nama yang ingin dicari !");
                jTextField2.requestFocus();
                tampilDataSiswa();
            } else {
                Statement stm;
                stm = (Statement) cn.createStatement();
                tabModel.getDataVector().removeAllElements();
                rs = stm.executeQuery("SELECT * FROM datasiswa WHERE Nama LIKE '%" + nama + "%' "
                        + "OR NomorInduk LIKE '%" + nama + "%'");
                rs.next();
                while (rs.next()) {
                    Object[] data = {rs.getString("NomorInduk"),
                        rs.getString("Nama"),
                        rs.getString("JenisKelamin"),
                        rs.getString("Alamat"),
                        rs.getString("SekolahAsal"),
                        rs.getString("CPSiswa"),
                        rs.getString("CPOrangTua"),
                        rs.getString("Kelas"),
                        rs.getString("Jurusan"),
                        rs.getString("Tagihan"),
                        rs.getString("PaketBimbel")
                    };
                    tabModel.addRow(data);
                }
                JOptionPane.showMessageDialog(this, "Pencarian Selesai");
            }

        } catch (SQLException e) {
            JOptionPane.showMessageDialog(this, "Data tidak ditemukan !");
            tampilDataSiswa();
        }
        //To change body of generated methods, choose Tools | Templates.
        jTextField2.requestFocus();
    }

    @SuppressWarnings("unchecked")
    public void kosong() {
        jTextField2.setText("");
    }

    public void kosongAdmin() {
        jTextField1.setText("");
        jTextField3.setText("");
        jTextField4.setText("");
        jPasswordField1.setText("");
    }
